<mvc:View
    controllerName="financialhub.controller.View5"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
    
    <Page>
        <!-- Header with centered title -->
        <Bar class="topHeader">
            <contentMiddle>
                <Text text="Welcome!" class="title" />
            </contentMiddle>
        </Bar>

        <!-- Centered VBox with small box styling -->
        <VBox class="centeredBox">
        <Label text="EmployeeID" labelFor="usernameInput" />
            <Input
                id="EmpIDInput"
                placeholder="Enter your EmployeeID"
                value="{/EmpId}"
                liveChange=".onLiveChange"
                class="sapUiSmallMarginBottom" />
            <Label text="Username" labelFor="usernameInput" />
            <Input
                id="usernameInput"
                placeholder="Enter your username"
                value="{/username}"
                liveChange=".onLiveChange"
                class="sapUiSmallMarginBottom" />
            <Button
                text="Submit"
                press=".onSubmit"
                type="Emphasized" />
        </VBox>
    </Page>
</mvc:View>