<mvc:View
    controllerName="financialhub.controller.View4"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Page>
        <content>
        <Bar class="topHeader">
            <contentLeft>
                <Button icon="sap-icon://nav-back" press="onNavBack" />
            </contentLeft>
            <contentMiddle>
                <Text text="View Your Wallet Transactions And History" class="title" />
            </contentMiddle>
        </Bar>
            <VBox class="sapUiSmallMargin">
                <!-- VizFrame for Chart -->
                <viz:VizFrame
                    id="idVizFrame"
                    uiConfig="{applicationSet:'fiori'}"
                    height="400px"
                    width="100%"
                    vizType="stacked_column">
                    <viz:dataset>
                        <!-- Dataset will be bound dynamically in the controller -->
                    </viz:dataset>
                    <viz:feeds>
                        <!-- Feeds will be added dynamically in the controller -->
                    </viz:feeds>
                </viz:VizFrame>
            </VBox>
        </content>
    </Page>
</mvc:View>